{
  "name": "scripts",
  "version": "1.0.0",
  "scripts": {
    "minify": "node minify.js",
    "postinstall": "npm i -g terser && bunx husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run minify",
      "git add ."
    ]
  },
  "devDependencies": {
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "terser": "^5.7.0"
  },
  "dependencies": {
    "lint-staged": "^15.2.10"
  }
}
